{% block scripts %}
  {{ parent() }}

  {% apply minify %}
  <script>
    $(document).ready(function() {
      var
        // Localiza e inicializa os elementos de nosso sistema de passos
        allContents = $('.ui.attached.segment').hide(),
        allSteps    = $('.ui.steps > .step').removeClass('active');
      ;

      // Inicialmente exibimos o primeiro passo
      allContents
        .first()
        .show()
      ;
      allSteps
        .first()
        .addClass('active')
      ;
      
      // Lidamos com os cliques de nosso sistema de passos
      $('.ui.steps > a.step')
        .click(function() {
          var
            // Localiza e inicializa os elementos de nosso sistema de
            // passos
            allContents = $('.ui.attached.segment').hide(),
            allSteps    = $('.ui.steps > .step').removeClass('active'),
            target      = $(this).prop("target")
          ;

          // Ativamos o item selecionado
          $(this)
            .addClass('active')
          ;
          $('#' + target)
            .show()
          ;
        
          return false;
        })
      ;
    });
  </script>
  {% endapply %}
{% endblock %}
