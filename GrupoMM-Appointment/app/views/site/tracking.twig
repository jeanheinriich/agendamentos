{% extends 'templates/site/layout.twig' %}
{% block title %}{{ parent() }} - Rastreamento{% endblock %}
{% block stylesheets %}
  {{ parent() }}

  {{ css('tabularmenu.min.css') }}
  <style>
    .ui.attached.segment {
      margin-bottom: 1em;
    }
  </style>
{% endblock stylesheets %}
{% block content %}
