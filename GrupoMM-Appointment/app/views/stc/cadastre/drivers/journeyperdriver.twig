                <div class="fields journeyEntry">
                  <input name="journeysperdriver[{{ journeyPerDriverNumber }}][journeyperdriverid]" type="hidden"
                         value="{{ journeyPerDriver.journeyperdriverid }}">
                  <div class="five wide field{{ cssError('journeysperdriver[' ~ journeyPerDriverNumber ~ '][journeyid]') }}">
                    {% if loop.first %}
                    <label>Jornada de trabalho</label>
                    {% else %}
                    <label class="mobile only">Jornada de trabalho</label>
                    {% endif %}
                    {% if editMode %}
                    <div class="ui search selection dropdown">
                      <input name="journeysperdriver[{{ journeyPerDriverNumber }}][journeyid]" type="hidden"
                             value="{{ journeyPerDriver.journeyid }}">
                      <i class="dropdown icon"></i>
                      <div class="default text"></div>
                      <div class="menu">
                        {% for journey in journeys %}
                          <div class="item"
                               {% if journey.id == journeyPerDriver.journeyid %}
                               selected
                               {% endif %}
                               data-default="{% if journey.asdefault %}true{% else %}false{% endif %}"
                               data-value="{{ journey.id }}"
                               data-text="{{ journey.name }}">
                            {{ journey.name }}
                          </div>
                        {% endfor %}
                      </div>
                    </div>
                    {% else %}
                    <div class="field static">
                      <span class="darking">{{ journeyPerDriver.journeyname }}&nbsp;</span>
                    </div>
                    {% endif %}
                    {% if hasError('journeysperdriver[' ~ journeyPerDriverNumber ~ '][journeyid]') %}
                    <small class="helper">{{ getError('journeysperdriver[' ~ journeyPerDriverNumber ~ '][journeyid]') }}</small>
                    {% endif %}
                  </div>
                  <div class="six wide field{{ cssError('journeysperdriver[' ~ journeyPerDriverNumber ~ '][begginingat]') }}">
                    {% if loop.first %}
                    <label>Iniciando em</label>
                    {% else %}
                    <label class="mobile only">Iniciando em</label>
                    {% endif %}
                    <div class="ui calendar">
                      <div class="ui input left icon{{ readonly }}{% if editMode %} action{% endif %}">
                        <i class="calendar icon"></i>
                        <input name="journeysperdriver[{{ journeyPerDriverNumber }}][begginingat]" type="text"
                               placeholder="Iniciando em..."
                               {{ readonly }}
                               value="{{ journeyPerDriver.begginingat }}">
                        {% if editMode %}
                        <button class="ui mini youtube icon button"
                                data-tooltip="Remove esta jornada"
                                data-position="top right" type="button"
                                journey="{{ journeyPerDriverNumber }}"
                                onclick="delJourneyPerDriver(this);">
                          <i class="minus icon"></i>
                        </button>
                        {% endif %}
                      </div>
                    </div>
                    {% if hasError('journeysperdriver[' ~ journeyPerDriverNumber ~ '][begginingat]') %}
                    <small class="helper">{{ getError('journeysperdriver[' ~ journeyPerDriverNumber ~ '][begginingat]') }}</small>
                    {% endif %}
                  </div>
                </div>
